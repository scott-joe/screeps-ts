{
    "compilerOptions": {
        "module": "esnext",
        "lib": ["esnext"],
        "target": "es2018",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false
    },
    // "include": ["**/src/**/*.ts", "**/test/**/*.ts"],
    "exclude": ["node_modules"]
}
